<form id="plugin_preflight_settings" class="form-horizontal">

    <h3>{{ _('Preflight Settings') }}</h3>

    <div class="control-group">

        <legend>{{ _('Checklist Items') }}</legend>
        <!-- TODO make this UI way, way less awful -->

        <div class="help-block">
            The checklist is defined as a JSON array of objects with the required property <code>item</code> and
            optional property <code>directions</code>.
        </div>

        <label for="plugin_preflight_settings_checklist" class="control-label">{{ _('Checklist JSON') }}</label>
        <div class="controls">
            <textarea
                    id="plugin_preflight_settings_checklist"
                    type="text"
                    class="input-block-level"
                    data-bind="value: settings.plugins.preflight.checklist"
                    placeholder='[{"item":"Clear the bed", "directions": "Make sure the bed is empty!"}]'
                    rows="10"
            >
            </textarea>
        </div>
    </div>

    <div class="control-group">

        <legend>{{ _('Fiddly Details') }}</legend>

        <label for="plugin_preflight_settings_title" class="control-label">{{ _('Title') }}</label>
        <div class="controls">
            <input id="plugin_preflight_settings_title" type="text" class="input-block-level"
                   data-bind="value: settings.plugins.preflight.title"
                   placeholder="Preflight">
            <span class="help-inline">Preflight checklist title when displayed to users.</span>
        </div>

        <label for="plugin_preflight_settings_timeout" class="control-label">{{ _('Timeout') }}</label>
        <div class="controls">
            <input id="plugin_preflight_settings_timeout" type="text" class="input-block-level"
                   data-bind="value: settings.plugins.preflight.timeout"
                   placeholder="300">
            <span class="help-inline">How long to wait (in seconds) before canceling a print without preflight interaction.</span>
        </div>

        <label for="plugin_preflight_settings_checked" class="control-label">{{ _('Checked') }}</label>
        <div class="controls">
            <input id="plugin_preflight_settings_checked" type="text" class="input-block-level"
                   data-bind="value: settings.plugins.preflight.checked"
                   placeholder="&#128505;">
            <span class="help-inline">Glyph to represent a checked item.</span>
        </div>

        <label for="plugin_preflight_settings_unchecked" class="control-label">{{ _('Unchecked') }}</label>
        <div class="plugin_preflight_settings_controls">
            <input id="plugin_preflight_settings_unchecked" type="text" class="input-block-level"
                   data-bind="value: settings.plugins.preflight.checked"
                   placeholder="&#9744;">
            <span class="help-inline">Glyph to represent an unchecked item.</span>
        </div>

        <label for="plugin_preflight_settings_allow_bypass" class="control-label">{{ _('Allow Bypass') }}</label>
        <div class="controls">
            <input id="plugin_preflight_settings_allow_bypass" type="checkbox" class="input-block-level"
                   data-bind="checked: settings.plugins.preflight.allow_bypass">
            <span class="help-inline">Whether or not to enable the <code>ALLOW_PREFLIGHT_BYPASS</code> permission.</span>
        </div>
    </div>

</form>
